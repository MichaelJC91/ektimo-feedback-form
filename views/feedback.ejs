<% include ./partials/header %>

<div class="container-fluid headerImg">
    
</div>

<div class="container feedbackFormContainer">
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="text-center">
                <h1>Ektimo Client Feedback Form</h1>
                <h5>Ektimo value your feedback and we would appreciate it if you took a few minutes to fill out this form (It should take less than 2 minutes)</h5>
            </div>
        </div>
    <div class="col-md-12 col-xs-12">
    <form class="feedbackForm" action="/" method="POST">
        <div class="form-group">
            <label for="companyName">Company Name</label>
            <input type="text" class="form-control" name="companyName" id="companyName" placeholder="Ektimo" required>
        </div>
        <fieldset class="form-group">
            <legend class="legendText">Out of 10, how would you rate your experience with Ektimo on this project?<br><span>(With 1 meaning you were unhappy and 10 meaning you were very appreciative)</span></legend>
            <div class="ratingContainer">
                    <h4 class="ratingTitle">Unhappy</h4>
                    <div class="form-check ratingRadioButton">
                    <label class="form-check-label">
                      <h4 class="ratingNumber">1</h4>
                      <input type="radio" class="form-check-input" name="rating" id="rating1" value="1" required>
                    </label>
                </div>
                <div class="form-check ratingRadioButton">
                    <label class="form-check-label">
                        <h4 class="ratingNumber">2</h4>
                        <input type="radio" class="form-check-input" name="rating" id="rating2" value="2" required>
                    </label>
                </div>
                <div class="form-check ratingRadioButton">
                    <label class="form-check-label">
                        <h4 class="ratingNumber">3</h4>
                        <input type="radio" class="form-check-input" name="rating" id="rating3" value="3" required>
                    </label>
                </div>
                <div class="form-check ratingRadioButton">
                    <label class="form-check-label">
                        <h4 class="ratingNumber">4</h4>
                        <input type="radio" class="form-check-input" name="rating" id="rating4" value="4" required>
                    </label>
                </div>
                <div class="form-check ratingRadioButton">
                    <label class="form-check-label">
                        <h4 class="ratingNumber">5</h4>
                        <input type="radio" class="form-check-input" name="rating" id="rating5" value="5" required>
                    </label>
                </div>
                <div class="form-check ratingRadioButton">
                    <label class="form-check-label">
                        <h4 class="ratingNumber">6</h4>
                        <input type="radio" class="form-check-input" name="rating" id="rating6" value="6" required>
                    </label>
                </div>
                <div class="form-check ratingRadioButton">
                    <label class="form-check-label">
                        <h4 class="ratingNumber">7</h4>
                        <input type="radio" class="form-check-input" name="rating" id="rating7" value="7" required>
                    </label>
                </div>
                <div class="form-check ratingRadioButton">
                    <label class="form-check-label">
                        <h4 class="ratingNumber">8</h4>
                        <input type="radio" class="form-check-input" name="rating" id="rating8" value="8" required>
                    </label>
                </div>
                <div class="form-check ratingRadioButton">
                    <label class="form-check-label">
                        <h4 class="ratingNumber">9</h4>
                        <input type="radio" class="form-check-input" name="rating" id="rating9" value="9" required>
                    </label>
                </div>
                <div class="form-check ratingRadioButton">
                    <label class="form-check-label">
                        <h4 class="ratingNumber ratingNumberLast">10</h4>
                        <input type="radio" class="form-check-input" name="rating" id="rating10" value="10" required>
                    </label>
                </div>
                <h4 class="ratingTitle text-center">Very<br>Appreciative</h4>
            </div>
        </fieldset>
        <div class="form-group">
            <label for="name">Your Name</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="Michael Carniato" required>
        </div>
        <div class="form-group">
            <label for="reason">Could you give a brief reason for this rating?</label>
            <h5>(We appreciate your honest feedback)</h5>
            <input type="text" class="form-control" name="reason" id="reason" placeholder="Fast And Reliable Service!" required>
        </div>
        <fieldset class="form-group">
            <h4>Are you happy to post this feedback to our website?</h4>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="postToWebsite" id="postToWebsiteYes" value="Yes" required>
                    Yes
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="postToWebsite" id="postToWebsiteNo" value="No">
                    No
                </label>
            </div>
        </fieldset>
        <fieldset class="form-group">
            <h4>Please select your preferred option to appear on our website.</h4>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="chooseName" id="nameAndComanyTrue" value="Name And Company" required>
                    My Name and Company Name Included
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="chooseName" id="nameOnly" value="Name Only">
                    My Name Only Included
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="chooseName" id="companyNameOnly" value="Company Name Only">
                    My Company Name Only Included
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="chooseName" id="anonymous" value="Anonymous">
                    My Name and Company Name Removed (Anonymous)
                </label>
            </div>
        </fieldset>
        <div class="form-group">
            <button class="btn btn-lg btn-primary">Submit</button>
        </div>
    </form>
    </div>
</div>